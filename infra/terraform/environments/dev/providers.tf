terraform {
  required_version = ">= 1.5"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.0"
    }
    archive = {
      source  = "hashicorp/archive"
      version = "~> 2.0"
    }
  }
}

# Default provider — us-west-2
provider "aws" {
  region = var.region
}

# Aliased provider — us-east-1 (required for CloudFront ACM certs)
provider "aws" {
  alias  = "us_east_1"
  region = "us-east-1"
}
