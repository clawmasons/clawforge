{
  "name": "clawforge",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter './packages/*' dev",
    "build": "pnpm --filter './packages/*' build",
    "clean": "pnpm --filter './packages/*' clean",
    "clean:build": "pnpm clean && pnpm build",
    "lint": "pnpm --filter './packages/*' lint",
    "build:deploy": "pnpm build && pnpm --filter @clawforge/api build:lambda",
    "bundle": "node scripts/bundle.mjs && pnpm --filter @clawforge/server exec tsc && chmod +x bundle/packages/cli/cli.js",
    "pack": "pnpm bundle && npm pack ./bundle --pack-destination ."
  },
  "bin": {
    "clawforge": "./bundle/packages/cli/cli.js"
  },
  "files": [
    "bundle"
  ],
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.29.1"
}
